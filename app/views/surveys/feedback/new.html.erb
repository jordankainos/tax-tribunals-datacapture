<% title t('.page_title') %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-xl"><%=t '.heading' %></h1>

    <%= govuk_error_summary(@form_object) %>

    <p class="govuk-heading-l"><%=t '.notice' %></p>

    <p class="govuk-body-l"><%=t '.lead_html' %></p>

    <%= form_for(@form_object, url: surveys_feedback_path) do |f| %>
      <%= f.govuk_text_field :name, width: 'one-half' %>
      <%= f.govuk_text_field :email, width: 'one-half' %>
      <%= f.govuk_collection_radio_buttons :assistance_level,
        ['none', 'partial', 'total'], :to_s, nil %>
      <%= f.govuk_text_area :comment %>
      <%= f.submit t('.submit'), class: 'govuk-button' %>
    <% end %>
  </div>
</div>
