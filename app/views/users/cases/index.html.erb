<% title t('.page_title') %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">

    <h1 class="govuk-heading-l">
      <%=t '.heading' %>
    </h1>
    <p class="govuk-body-l"><%=t '.cases_intro' %></p>
    <%= t('.expire_warning_html', expire_in_days: Rails.configuration.x.cases.expire_in_days) %>
  </div>
</div>

<table class="saved-appeals">
  <caption class="govuk-visually-hidden"><%=t '.table.caption' %></caption>
  <thead>
  <tr>
    <th><%=t '.table.heading.expires_in' %></th>
    <th><%=t '.table.heading.your_reference' %></th>
    <th><%=t '.table.heading.taxpayer_name' %></th>
    <th><span class="govuk-visually-hidden"><%=t '.table.heading.case_actions' %></span>&nbsp;</th>
  </tr>
  </thead>

  <tbody>
    <% @tribunal_cases.present_each(PortfolioCasePresenter) do |tribunal_case| %>
      <%= render partial: 'case_row', locals: {tribunal_case: tribunal_case} %>
    <% end %>
  </tbody>
</table>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <p class="govuk-body">
      <%= link_to t('.new_case'), root_path, class: 'govuk-link' %>
    </p>
  </div>
</div>
