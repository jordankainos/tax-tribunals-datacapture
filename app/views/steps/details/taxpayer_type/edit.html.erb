<% title t('.page_title') %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= step_header %>

    <h1 class="govuk-heading-l"><%= translate_for_user_type '.heading' %></h1>

    <%= step_form @form_object, html:{ class: 'ga-radioButtonGroup'  } do |f| %>
      <%= f.radio_button_fieldset :taxpayer_type,
        choices: Steps::Details::TaxpayerTypeForm.choices,
        legend_options: {class: 'visuallyhidden'} %>

      <%= render partial: 'steps/shared/continue_or_save', locals: {f: f} %>
    <% end %>
  </div>
</div>
