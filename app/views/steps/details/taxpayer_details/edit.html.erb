<% title t('.page_title') %>
<% step_header %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= govuk_error_summary %>

    <h1 class="govuk-heading-l"><%=t '.heading' %></h1>

    <%= step_form @form_object do |f| %>
      <% @form_object.name_fields.each do |name_field| %>
        <%= f.govuk_text_field name_field %>
      <% end %>
      <%= f.govuk_text_area :taxpayer_contact_address, size: '40x4' %>
      <%= f.govuk_text_field :taxpayer_contact_city %>
      <%= f.govuk_text_field :taxpayer_contact_postcode %>
      <%= f.govuk_text_field :taxpayer_contact_country %>
      <% if @form_object.show_fao? %>
        <%= f.govuk_text_field :taxpayer_organisation_fao %>
      <% end %>
      <%= f.govuk_text_field :taxpayer_contact_email %>
      <%= f.govuk_text_field :taxpayer_contact_phone %>
      <% if @form_object.show_registration_number? %>
        <%= f.govuk_text_field :taxpayer_organisation_registration_number %>
      <% end %>
      <%= render partial: 'steps/shared/continue_or_save', locals: {f: f} %>
    <% end %>
  </div>
</div>
