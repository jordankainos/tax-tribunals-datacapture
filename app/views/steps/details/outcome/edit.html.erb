<% title t('.page_title') %>
<% step_header %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= govuk_error_summary %>

    <h1 class="govuk-heading-l"><%= translate_with_appeal_or_application '.heading' %></h1>

    <p class="govuk-body-l"><%= translate_with_appeal_or_application '.lead_text' %></p>

    <%= step_form @form_object do |f| %>
      <%= f.govuk_text_area :outcome %>
      <%= render partial: 'steps/shared/continue_or_save', locals: {f: f} %>
    <% end %>
  </div>
</div>
